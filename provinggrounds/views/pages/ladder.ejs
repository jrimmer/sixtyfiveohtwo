<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Ladder - The Proving Grounds</title>
    <link rel="stylesheet" href="/provinggrounds/css/terminal.css">
</head>
<body>
    <div class="terminal">
        <div class="ascii-box">
<pre>
===============================================
              THE LADDER
           User Rankings
===============================================
</pre>
        </div>

        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Level</th>
                    <th>Rank</th>
                    <th>Kills</th>
                    <th>Deaths</th>
                    <th>Exp</th>
                </tr>
            </thead>
            <tbody>
                <% rankings.forEach((player, index) => { %>
                <tr class="<%= player.id === user.id ? 'highlight' : '' %>">
                    <td><%= (page - 1) * 20 + index + 1 %></td>
                    <td><%= player.name %></td>
                    <td><%= player.level %></td>
                    <td><%= player.rank_title %></td>
                    <td><%= player.kills %></td>
                    <td><%= player.deaths %></td>
                    <td><%= player.experience %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>

        <% if (totalPages > 1) { %>
        <div class="pagination">
            <% if (page > 1) { %>
            <a href="/main/ladder?page=<%= page - 1 %>">&lt; Prev</a>
            <% } %>
            <span>Page <%= page %> of <%= totalPages %></span>
            <% if (page < totalPages) { %>
            <a href="/main/ladder?page=<%= page + 1 %>">Next &gt;</a>
            <% } %>
        </div>
        <% } %>

        <div class="menu" style="margin-top: 20px;">
            <div class="menu-item">
                <span class="menu-key">&lt;</span>
                <a href="/main">Return to Main Menu</a>
            </div>
        </div>

        <div class="status-bar">
            <span>[<%= user.name %>]</span>
            <span>Level: <%= user.level %></span>
            <span>Gold: <%= user.gold %></span>
            <span>HP: <%= user.hp %>/<%= user.max_hp %></span>
        </div>
    </div>
    <script src="/provinggrounds/js/terminal.js"></script>
</body>
</html>
