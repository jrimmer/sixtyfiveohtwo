<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Combat Result - The Proving Grounds</title>
    <link rel="stylesheet" href="/css/terminal.css">
</head>
<body>
    <div class="terminal">
        <div class="ascii-box">
<pre>
===============================================
           COMBAT RESULT
===============================================
</pre>
        </div>

        <h2><%= user.name %> vs <%= opponent.name %></h2>

        <div class="combat-log">
            <% log.forEach(entry => { %>
            <p class="<%= entry.type %>"><%= entry.text %></p>
            <% }); %>
        </div>

        <div class="message <%= won ? 'message-success' : 'message-error' %>">
            <% if (won) { %>
            <strong>VICTORY!</strong>
            <p>You defeated <%= opponent.name %>!</p>
            <p>Gold stolen: <%= goldStolen %></p>
            <p>Experience earned: <%= expEarned %></p>
            <% } else { %>
            <strong>DEFEAT!</strong>
            <p>You were defeated by <%= opponent.name %>!</p>
            <p>Gold lost: <%= goldLost %></p>
            <% } %>
        </div>

        <div class="menu" style="margin-top: 20px;">
            <div class="menu-item">
                <span class="menu-key">&lt;</span>
                <a href="/combat/proving-grounds">Return to Proving Grounds</a>
            </div>
        </div>

        <div class="status-bar">
            <span>[<%= user.name %>]</span>
            <span>Level: <%= user.level %></span>
            <span>Gold: <%= user.gold %></span>
            <span>HP: <%= user.hp %>/<%= user.max_hp %></span>
        </div>
    </div>
    <script src="/js/terminal.js"></script>
</body>
</html>
