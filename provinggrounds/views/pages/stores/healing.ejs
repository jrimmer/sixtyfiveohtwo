<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Healing Shop - The Proving Grounds</title>
    <link rel="stylesheet" href="/provinggrounds/css/terminal.css">
</head>
<body>
    <div class="terminal">
        <div class="ascii-box">
<pre>
===============================================
            HEALING SHOP
      "Restore your vitality!"
===============================================
</pre>
        </div>

        <% if (typeof message !== 'undefined' && message) { %>
        <div class="message message-success">
            <%= message %>
        </div>
        <% } %>

        <% if (typeof error !== 'undefined' && error) { %>
        <div class="message message-error">
            <%= error %>
        </div>
        <% } %>

        <div class="stats" style="margin: 20px 0;">
            <div class="stat">
                <span class="stat-label">Gold:</span>
                <span class="stat-value"><%= user.gold %></span>
            </div>
            <div class="stat">
                <span class="stat-label">HP:</span>
                <span class="stat-value"><%= user.hp %>/<%= user.max_hp %></span>
            </div>
            <div class="stat">
                <span class="stat-label">Power:</span>
                <span class="stat-value"><%= user.power %>/<%= user.max_power %></span>
            </div>
        </div>

        <h3>Healing Options</h3>

        <div class="menu">
            <% if (user.hp < user.max_hp) { %>
            <div class="menu-item">
                <span class="menu-key">H)</span>
                <span>Heal HP (<%= hpCost %> gold per point)</span>
            </div>
            <form action="/provinggrounds/stores/healing/hp" method="POST" style="margin: 10px 0 20px 30px;">
                <label>Amount to heal (max <%= user.max_hp - user.hp %>):</label>
                <input type="number" name="amount" min="1" max="<%= user.max_hp - user.hp %>" value="<%= Math.min(user.max_hp - user.hp, Math.floor(user.gold / hpCost)) %>" style="width: 80px;">
                <button type="submit">Heal</button>
            </form>
            <% } else { %>
            <div class="menu-item">
                <span style="color: var(--dim-color);">HP is full!</span>
            </div>
            <% } %>

            <% if (user.power < user.max_power) { %>
            <div class="menu-item">
                <span class="menu-key">P)</span>
                <span>Restore Power (<%= powerCost %> gold per point)</span>
            </div>
            <form action="/provinggrounds/stores/healing/power" method="POST" style="margin: 10px 0 20px 30px;">
                <label>Amount to restore (max <%= user.max_power - user.power %>):</label>
                <input type="number" name="amount" min="1" max="<%= user.max_power - user.power %>" value="<%= Math.min(user.max_power - user.power, Math.floor(user.gold / powerCost)) %>" style="width: 80px;">
                <button type="submit">Restore</button>
            </form>
            <% } else { %>
            <div class="menu-item">
                <span style="color: var(--dim-color);">Power is full!</span>
            </div>
            <% } %>

            <% if (user.hp < user.max_hp || user.power < user.max_power) { %>
            <div class="menu-item">
                <span class="menu-key">F)</span>
                <form action="/provinggrounds/stores/healing/full" method="POST" style="display: inline;">
                    Full Restoration (<%= fullCost %> gold)
                    <button type="submit">Restore All</button>
                </form>
            </div>
            <% } %>
        </div>

        <div class="menu" style="margin-top: 20px;">
            <div class="menu-item">
                <span class="menu-key">&lt;</span>
                <a href="/provinggrounds/stores">Return to Bazaar</a>
            </div>
        </div>

        <div class="status-bar">
            <span>[<%= user.name %>]</span>
            <span>Level: <%= user.level %></span>
            <span>Gold: <%= user.gold %></span>
            <span>HP: <%= user.hp %>/<%= user.max_hp %></span>
        </div>
    </div>
    <script src="/provinggrounds/js/terminal.js"></script>
</body>
</html>
