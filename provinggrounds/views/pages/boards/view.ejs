<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= board.name %> - The Proving Grounds</title>
    <link rel="stylesheet" href="/css/terminal.css">
</head>
<body>
    <div class="terminal">
        <div class="ascii-box">
<pre>
===============================================
      <%= board.name.toUpperCase() %>
===============================================
</pre>
        </div>

        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Subject</th>
                    <th>From</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <% messages.forEach((msg, index) => { %>
                <tr>
                    <td><%= (page - 1) * 20 + index + 1 %></td>
                    <td><a href="/boards/<%= board.id %>/message/<%= msg.id %>"><%= msg.subject %></a></td>
                    <td><%= msg.author_name %></td>
                    <td><%= new Date(msg.created_at).toLocaleDateString() %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>

        <% if (messages.length === 0) { %>
        <p style="color: var(--dim-color);">No messages on this board.</p>
        <% } %>

        <% if (totalPages > 1) { %>
        <div class="pagination">
            <% if (page > 1) { %>
            <a href="/boards/<%= board.id %>?page=<%= page - 1 %>">&lt; Prev</a>
            <% } %>
            <span>Page <%= page %> of <%= totalPages %></span>
            <% if (page < totalPages) { %>
            <a href="/boards/<%= board.id %>?page=<%= page + 1 %>">Next &gt;</a>
            <% } %>
        </div>
        <% } %>

        <div class="menu" style="margin-top: 20px;">
            <div class="menu-item">
                <span class="menu-key">P)</span>
                <a href="/boards/<%= board.id %>/post">Post New Message</a>
            </div>
            <div class="menu-item">
                <span class="menu-key">&lt;</span>
                <a href="/boards">Return to Board List</a>
            </div>
        </div>

        <div class="status-bar">
            <span>[<%= user.name %>]</span>
            <span>Level: <%= user.level %></span>
            <span>Gold: <%= user.gold %></span>
            <span>HP: <%= user.hp %>/<%= user.max_hp %></span>
        </div>
    </div>
    <script src="/js/terminal.js"></script>
</body>
</html>
