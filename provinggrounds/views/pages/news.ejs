<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News - The Proving Grounds</title>
    <link rel="stylesheet" href="/css/terminal.css">
</head>
<body>
    <div class="terminal">
        <div class="ascii-box">
<pre>
===============================================
              NEWS/UPDATES
===============================================
</pre>
        </div>

        <% news.forEach(item => { %>
        <div class="board-message">
            <div class="board-message-header">
                <strong><%= item.title %></strong>
                <span style="color: var(--dim-color);"> - <%= new Date(item.created_at).toLocaleDateString() %></span>
            </div>
            <div class="board-message-body"><%= item.content %></div>
        </div>
        <% }); %>

        <% if (news.length === 0) { %>
        <p style="color: var(--dim-color);">No news at this time.</p>
        <% } %>

        <div class="menu" style="margin-top: 20px;">
            <div class="menu-item">
                <span class="menu-key">&lt;</span>
                <a href="/main">Return to Main Menu</a>
            </div>
        </div>

        <div class="status-bar">
            <span>[<%= user.name %>]</span>
            <span>Level: <%= user.level %></span>
            <span>Gold: <%= user.gold %></span>
            <span>HP: <%= user.hp %>/<%= user.max_hp %></span>
        </div>
    </div>
    <script src="/js/terminal.js"></script>
</body>
</html>
