<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= board.name %> - Lost Gonzo BBS</title>
    <link rel="stylesheet" href="/provinggrounds/css/terminal.css">
</head>
<body>
    <div class="terminal">
        <div class="ascii-box">
<pre>
===============================================================
                      LOST GONZO BBS
                      <%= board.name %>
===============================================================
</pre>
        </div>

        <% if (posts.length === 0) { %>
        <p>No posts yet. Be the first to post!</p>
        <% } else { %>
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Subject</th>
                    <th>Author</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <% posts.forEach((p, i) => { %>
                <tr>
                    <td><%= (page - 1) * 20 + i + 1 %></td>
                    <td><a href="/tprobbs/boards/<%= board.id %>/post/<%= p.id %>"><%= p.subject || 'No Subject' %></a></td>
                    <td><%= p.username %></td>
                    <td><%= new Date(p.created_at).toLocaleDateString() %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>

        <% if (totalPages > 1) { %>
        <div class="pagination">
            <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/tprobbs/boards/<%= board.id %>?page=<%= i %>" class="<%= i === page ? 'active' : '' %>"><%= i %></a>
            <% } %>
        </div>
        <% } %>
        <% } %>

        <div class="menu">
            <div class="menu-item">
                <span class="menu-key">N)</span>
                <a href="/tprobbs/boards/<%= board.id %>/new">New Post</a>
            </div>
            <div class="menu-item">
                <span class="menu-key">B)</span>
                <a href="/tprobbs/boards">Back to Boards</a>
            </div>
        </div>

        <div class="status-bar">
            <span>[<%= user.username %>]</span>
            <span>Level: <%= user.level %></span>
            <span>Gold: <%= Math.floor(user.gold).toLocaleString() %></span>
            <span>HP: <%= user.hit_points %>/<%= user.max_hp %></span>
            <span>Time: <%= user.timeRemaining %>m</span>
        </div>
    </div>
    <script src="/provinggrounds/js/terminal.js"></script>
</body>
</html>
