<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Armor Shop - Lost Gonzo BBS</title>
    <link rel="stylesheet" href="/provinggrounds/css/terminal.css">
</head>
<body>
    <div class="terminal">
        <div class="ascii-box">
<pre>
===============================================================
                    ARMOR SHOP
                  "Stay Protected"
===============================================================
</pre>
        </div>

        <div class="stats">
            <div class="stat">
                <span class="stat-label">Gold:</span>
                <span class="stat-value"><%= Math.floor(user.gold).toLocaleString() %></span>
            </div>
            <div class="stat">
                <span class="stat-label">Current Armor:</span>
                <span class="stat-value"><%= currentArmor ? currentArmor.name : 'Cloth' %></span>
            </div>
        </div>

        <% if (message) { %>
        <div class="message <%= messageType === 'error' ? 'message-error' : 'message-success' %>">
            <p><%= message %></p>
        </div>
        <% } %>

        <table>
            <thead>
                <tr>
                    <th>Armor</th>
                    <th>Level</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% armors.forEach(a => { %>
                <tr>
                    <td><%= a.name %></td>
                    <td><%= a.level %></td>
                    <td><%= a.price.toLocaleString() %></td>
                    <td>
                        <% if (user.armor >= a.id) { %>
                        <span class="owned">Owned</span>
                        <% } else if (user.gold >= a.price) { %>
                        <form action="/tprobbs/stores/armor/buy/<%= a.level %>" method="POST" style="display:inline">
                            <button type="submit" class="link-button">Buy</button>
                        </form>
                        <% } else { %>
                        <span class="insufficient">Insufficient</span>
                        <% } %>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>

        <% if (currentArmor && tradeInValue > 0) { %>
        <div class="trade-in">
            <p>Trade in your <%= currentArmor.name %> for <%= tradeInValue.toLocaleString() %> gold?</p>
            <form action="/tprobbs/stores/armor/sell" method="POST">
                <button type="submit" class="link-button">Sell Armor</button>
            </form>
        </div>
        <% } %>

        <div class="menu">
            <div class="menu-item">
                <span class="menu-key">B)</span>
                <a href="/tprobbs/stores">Back to Stores</a>
            </div>
        </div>

        <div class="status-bar">
            <span>[<%= user.username %>]</span>
            <span>Level: <%= user.level %></span>
            <span>Gold: <%= Math.floor(user.gold).toLocaleString() %></span>
            <span>HP: <%= user.hit_points %>/<%= user.max_hp %></span>
            <span>Time: <%= user.timeRemaining %>m</span>
        </div>
    </div>
</body>
</html>
