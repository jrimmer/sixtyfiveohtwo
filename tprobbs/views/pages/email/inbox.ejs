<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Inbox - Lost Gonzo BBS</title>
    <link rel="stylesheet" href="/provinggrounds/css/terminal.css">
</head>
<body>
    <div class="terminal">
        <div class="ascii-box">
<pre>
===============================================================
                      LOST GONZO BBS
                      Electronic Mail
===============================================================
</pre>
        </div>

        <% if (emails.length === 0) { %>
        <p>No messages in your inbox.</p>
        <% } else { %>
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>From</th>
                    <th>Subject</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <% emails.forEach(e => { %>
                <tr class="<%= e.read ? '' : 'unread' %>">
                    <td><%= e.read ? '' : '*' %></td>
                    <td><%= e.from_username %></td>
                    <td><a href="/tprobbs/email/read/<%= e.id %>"><%= e.subject || 'No Subject' %></a></td>
                    <td><%= new Date(e.created_at).toLocaleDateString() %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>

        <% if (totalPages > 1) { %>
        <div class="pagination">
            <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/tprobbs/email?page=<%= i %>" class="<%= i === page ? 'active' : '' %>"><%= i %></a>
            <% } %>
        </div>
        <% } %>
        <% } %>

        <div class="menu">
            <div class="menu-item">
                <span class="menu-key">C)</span>
                <a href="/tprobbs/email/compose">Compose New</a>
            </div>
            <div class="menu-item">
                <span class="menu-key">S)</span>
                <a href="/tprobbs/email/sent">Sent Mail</a>
            </div>
            <div class="menu-item">
                <span class="menu-key">B)</span>
                <a href="/tprobbs/main">Back to Main Menu</a>
            </div>
        </div>

        <div class="status-bar">
            <span>[<%= user.username %>]</span>
            <span>Level: <%= user.level %></span>
            <span>Gold: <%= Math.floor(user.gold).toLocaleString() %></span>
            <span>HP: <%= user.hit_points %>/<%= user.max_hp %></span>
            <span>Time: <%= user.timeRemaining %>m</span>
        </div>
    </div>
    <script src="/provinggrounds/js/terminal.js"></script>
</body>
</html>
